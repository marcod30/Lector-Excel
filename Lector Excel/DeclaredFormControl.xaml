<UserControl x:Class="Lector_Excel.DeclaredFormControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lector_Excel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <GroupBox Header="Declarado ???" Margin="10,0,10,10">
            <StackPanel>
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" MinWidth="300" MaxWidth="500"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" FontSize="10">NIF del declarado</Label>
                    <TextBox Grid.Row="1" Grid.Column="0" Margin="5,0" MinWidth="100"></TextBox>

                    <Label Grid.Row="0" Grid.Column="1" FontSize="10">NIF repr. Legal</Label>
                    <TextBox Grid.Row="1" Grid.Column="1" Margin="5,0" MinWidth="100"></TextBox>

                    <Label Grid.Row="0" Grid.Column="2" FontSize="10">NIF operador comunitario</Label>
                    <TextBox Grid.Row="1" Grid.Column="2" Margin="5,0" MinWidth="100"></TextBox>

                    <Label Grid.Row="0" Grid.Column="3" FontSize="10">Apellidos y nombre, razón social o denominación del declarado</Label>
                    <TextBox Grid.Row="1" Grid.Column="3" Margin="5,0"></TextBox>


                </Grid>
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" FontSize="10" Content="Código&#10;de provincia"></Label>
                    <TextBox Grid.Row="1" Grid.Column="0" Margin="5,0" MinWidth="30"></TextBox>

                    <Label Grid.Row="0" Grid.Column="1" FontSize="10" Content="Código&#10;de país"></Label>
                    <TextBox Grid.Row="1" Grid.Column="1" Margin="5,0" MinWidth="30"></TextBox>

                    <Label Grid.Row="0" Grid.Column="2" FontSize="10" Content="Clave&#10;operación"></Label>
                    <TextBox Grid.Row="1" Grid.Column="2" Margin="5,0" MinWidth="20"></TextBox>

                    <Label Grid.Row="0" Grid.Column="3" FontSize="10" Content="Operación&#10;seguro"></Label>
                    <TextBox Grid.Row="1" Grid.Column="3" Margin="5,0" MinWidth="20"></TextBox>

                    <Label Grid.Row="0" Grid.Column="4" FontSize="10" Content="Arrendamiento&#10;local negocio"></Label>
                    <TextBox Grid.Row="1" Grid.Column="4" Margin="5,0"></TextBox>

                    <Label Grid.Row="0" Grid.Column="5" FontSize="10" Content="Operación IVA&#10;de caja"></Label>
                    <TextBox Grid.Row="1" Grid.Column="5" Margin="5,0"></TextBox>

                    <Label Grid.Row="0" Grid.Column="6" FontSize="10" Content="OP. con inversión&#10;del sujeto pasivo"></Label>
                    <TextBox Grid.Row="1" Grid.Column="6" Margin="5,0"></TextBox>

                    <Label Grid.Row="0" Grid.Column="7" FontSize="10" Content="OP. régimen de depósito&#10;distinto del aduanero"></Label>
                    <TextBox Grid.Row="1" Grid.Column="7" Margin="5,0"></TextBox>
                </Grid>
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" FontSize="10" Content="Importe&#10;percibido en metálico"></Label>
                    <TextBox Grid.Row="1" Grid.Column="0" Margin="5,0"></TextBox>

                    <Label Grid.Row="0" Grid.Column="1" FontSize="10" Content="Importe anual&#10;de las operaciones"></Label>
                    <TextBox Grid.Row="1" Grid.Column="1" Margin="5,0"></TextBox>

                    <Label Grid.Row="0" Grid.Column="2" FontSize="10" Content="Importe anual percibido por&#10;transmisiones de inmuebles sujetas a IVA"></Label>
                    <TextBox Grid.Row="1" Grid.Column="2" Margin="5,0"></TextBox>

                    <Label Grid.Row="0" Grid.Column="3" FontSize="10" Content="Importe anual de las operaciones&#10;devengadas con criterio IVA de caja"></Label>
                    <TextBox Grid.Row="1" Grid.Column="3" Margin="5,0"></TextBox>
                </Grid>
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MaxWidth="300"/>
                        <ColumnDefinition Width="Auto" MaxWidth="300"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" FontSize="10" Content="Importe&#10;de las operaciones"></Label>
                    <TextBox Grid.Row="1" Grid.Column="0" Margin="5,1" MinWidth="200" ToolTip="Trimestre 1"></TextBox>
                    <TextBox Grid.Row="2" Grid.Column="0" Margin="5,1" MinWidth="200" ToolTip="Trimestre 2"></TextBox>
                    <TextBox Grid.Row="3" Grid.Column="0" Margin="5,1" MinWidth="200" ToolTip="Trimestre 3"></TextBox>
                    <TextBox Grid.Row="4" Grid.Column="0" Margin="5,1" MinWidth="200" ToolTip="Trimestre 4"></TextBox>

                    <Label Grid.Row="0" Grid.Column="1" FontSize="10" Content="Importe anual percibido por&#10;transmisiones de inmuebles sujetas a IVA"></Label>
                    <TextBox Grid.Row="1" Grid.Column="1" Margin="5,1" MinWidth="200" ToolTip="Trimestre 1"></TextBox>
                    <TextBox Grid.Row="2" Grid.Column="1" Margin="5,1" MinWidth="200" ToolTip="Trimestre 2"></TextBox>
                    <TextBox Grid.Row="3" Grid.Column="1" Margin="5,1" MinWidth="200" ToolTip="Trimestre 3"></TextBox>
                    <TextBox Grid.Row="4" Grid.Column="1" Margin="5,1" MinWidth="200" ToolTip="Trimestre 4"></TextBox>
                </Grid>
            </StackPanel>
        </GroupBox>
    </StackPanel>
    
</UserControl>
