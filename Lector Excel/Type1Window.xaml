<Window x:Class="Lector_Excel.Type1Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lector_Excel"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="Rellenar datos del tipo 1" Height="600" Width="400" ResizeMode="CanMinimize">
    <DockPanel Name="main_dockpanel" Margin="0"> <!-- Don't change this dockpanel-->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Archivo">
                <MenuItem Name="menu_importData" Header="Importar desde fichero" Click="Menu_importData_Click"/>
                <MenuItem Name="menu_exportData" Header="Exportar a fichero" Click="Menu_exportData_Click" IsEnabled="False"/>
                <Separator/>
                <MenuItem Header="Cerrar" Click="Btn_Cancel_Click"/>
            </MenuItem>
        </Menu>
        <Label DockPanel.Dock="Top">
            Ejercicio
        </Label>
        <TextBox Margin="2" Name="txt_Ejercicio" DockPanel.Dock="Top" MaxLength="4" Height="20">
            
        </TextBox>
        
        <Label DockPanel.Dock="Top">
            NIF del declarante
        </Label>
        <TextBox Margin="2" Name="txt_NIF" DockPanel.Dock="Top" MaxLength="9" Height="20">

        </TextBox>
        
        <Label DockPanel.Dock="Top">
            Apellidos y nombre, razón social o denominación del declarante
        </Label>
        <TextBox Margin="2" Name="txt_Name" DockPanel.Dock="Top" MaxLength="40" Height="20">
            
        </TextBox>
        
        <Label DockPanel.Dock="Top" FontWeight="Bold">
            Persona con quién relacionarse
        </Label>
        <Canvas DockPanel.Dock="Top" Height="25">
            <Label Canvas.Left="10">
                Teléfono
            </Label>
            <Label Canvas.Left="130">
                Apellidos y nombre
            </Label>
        </Canvas>
        <Canvas DockPanel.Dock="Top" Height="30">
            <TextBox Canvas.Left="10" Name="txt_Phone" DockPanel.Dock="Top" MaxLength="9" Height="20" Width="100" HorizontalAlignment="Left">

            </TextBox>
            <TextBox Canvas.Left="130" Name="txt_RelationName" DockPanel.Dock="Top" MaxLength="40" Height="20" Width="250" HorizontalAlignment="Left">

            </TextBox>
        </Canvas>
        
        <Label DockPanel.Dock="Top">
            Número total de personas y entidades
        </Label>
        <TextBox Margin="2" Name="txt_Entities" DockPanel.Dock="Top" MaxLength="9" Height="20">
            
        </TextBox>
        
        <Label DockPanel.Dock="Top">
            Importe total anual de las operaciones
        </Label>
        <TextBox Margin="2" Name="txt_TotalMoney" DockPanel.Dock="Top" Height="20" MaxLength="16" VerticalAlignment="Top">

        </TextBox>
        
        <Label DockPanel.Dock="Top">
            Número total de inmuebles
        </Label>
        <TextBox Margin="2" Name="txt_TotalProperties" DockPanel.Dock="Top" Height="20" MaxLength="9" VerticalAlignment="Top">

        </TextBox>
        
        <Label DockPanel.Dock="Top">
            Importe total de las operaciones de arrendamiento de locales de negocio
        </Label>
        <TextBox Margin="2" Name="txt_TotalMoneyRental" DockPanel.Dock="Top" Height="20" MaxLength="16" VerticalAlignment="Top">

        </TextBox>

        <Label DockPanel.Dock="Top">
            NIF del representante legal
        </Label>
        <TextBox Margin="2" Name="txt_NIFLegal" DockPanel.Dock="Top" MaxLength="9" Height="20">

        </TextBox>

        <Canvas DockPanel.Dock="Bottom">
            <Button Name="btn_OK" Canvas.Left="80" Canvas.Top="10" Canvas.Bottom="10" Width="100" Click="Btn_OK_Click">
                Aceptar
            </Button>
            <Button Name="btn_Cancel" Canvas.Left="200" Canvas.Top="10" Canvas.Bottom="10" Width="100" Click="Btn_Cancel_Click">
                Cancelar
            </Button>
        </Canvas>
    </DockPanel>
</Window>
